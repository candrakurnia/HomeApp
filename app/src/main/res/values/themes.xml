<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HomeApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>


    <style name="Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/shape_rectangle_button_primary</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Login" >
        <item name="android:text">Login</item>
    </style>

    <style name="Button.SignUp" >
        <item name="android:text">SignUp</item>
    </style>

    <style name="Button.Start" >
        <item name="android:text">Get Started</item>
    </style>

    <style name="TextView" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="TextView.Large">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="background">@drawable/shape_rectangle_rounded</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="EditText.Username">
        <item name="android:drawableStart">@drawable/ic_user</item>
        <item name="android:hint">Username</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="EditText.Email">
        <item name="android:drawableStart">@drawable/ic_user</item>
        <item name="android:hint">Username</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="EditText.Password">
        <item name="android:drawableStart">@drawable/ic_lock</item>
        <item name="android:hint">Password</item>
        <item name="android:inputType">textPassword</item>
    </style>

</resources>